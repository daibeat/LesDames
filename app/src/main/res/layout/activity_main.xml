<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicstructureapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_dames_main">

            <TextView
                android:id="@+id/dames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_dames_main"
                android:text="@string/Dames_main"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_dames_main" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_sonidos_main">

            <TextView
                android:id="@+id/listado_sonidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_sonidos_main"
                android:text="@string/llistat_de_sons"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_sonidos_main" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_descripcion_main">

            <TextView
                android:id="@+id/proyecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_descripcion_main"
                android:text="@string/descripcion_del_projecte"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_descripcion_main" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_artistas_main">

            <TextView
                android:id="@+id/bruforrellad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_artistas_main"
                android:text="@string/artistes_bru_forrellad"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_artistas_main" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_vitralls_main">

            <TextView
                android:id="@+id/vidrieras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_vitralls_main"
                android:text="Sobre els vitralls"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize_vitralls_main" />
        </FrameLayout>

        <ImageView
            android:id="@+id/detalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/detalle" />
    </LinearLayout>
</ScrollView>
