<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/detalle_reproduccion" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_play_repro"
        android:layout_marginTop="@dimen/marginTop_play_repro"
        android:background="@color/background_play_repro"
        android:src="@drawable/ic_play_circle_filled_white_24dp" />

    <ImageButton
        android:id="@+id/pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_pause_repro"
        android:layout_marginTop="@dimen/marginTop_pause_repro"
        android:background="@color/background__pause_repro"
        android:src="@drawable/ic_pause_circle_filled_white_24dp" />

</RelativeLayout>