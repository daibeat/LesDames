<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFE0B2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/david"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF9800"
            android:text="David Bru"
            android:textSize="20sp"
            android:padding="16dp"
            android:textColor="@android:color/white"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/texto_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/david_bru_descripcion"
                android:background="#FFCC80"
                android:textSize="17sp"
                android:padding="20dp"
                android:textColor="#E65100"
                />
        </FrameLayout>
        <TextView
            android:id="@+id/web_david"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFE0B2"
            android:text="www.davidbru.com"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:textSize="17sp"
            android:textColor="#E65100"
           />


        <TextView
            android:id="@+id/alfons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alfons Forrellad"
            android:background="#FF9800"
            android:textSize="20sp"
            android:padding="20dp"
            android:textColor="@android:color/white"
            />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/texto_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/afons_forrellad_descripcion"
                android:textSize="17sp"
                android:padding="16dp"
                android:background="#FFCC80"
                android:textColor="#E65100"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/web_alfons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFE0B2"
            android:text="www.alfonsforrellad.com"
            android:layout_gravity="center"
            android:paddingBottom="16dp"
            android:textColor="#E65100"
            android:textSize="17sp"
            />
    </LinearLayout>
</ScrollView>