<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_vid_tab">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_vid_tab"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/espacio"
            android:layout_width="@dimen/width_img_vid_tab"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft_img_vid_tab"
            android:adjustViewBounds="true"
            android:padding="@dimen/padding_img_vid_tab"
            android:src="@drawable/dames_entera" />


        <TextView
            android:id="@+id/texto_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/espacio"
            android:layout_marginBottom="@dimen/marginBottom_text_vid_tab"
            android:layout_marginRight="@dimen/marginRight_text_vid_tab"
            android:padding="@dimen/padding_vitrallsDesc_page"
            android:text="@string/vitralls_descripcion"
            android:textColor="@android:color/white"
            android:lineSpacingExtra="@dimen/lineSpace_text_vid_tab"
            android:textSize="@dimen/textSize_vitrallsdesc_page" />
        <TextView
            android:id="@+id/link_museo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop_webmuseo_tab"
            android:layout_marginLeft="@dimen/marginLeft_webmuseo_tab"
            android:layout_below="@+id/espacio"
            android:text="@string/web_museo"
            android:textColor="@color/color_webmuseo_tab"
            android:textSize="@dimen/textSize_link_museo"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>