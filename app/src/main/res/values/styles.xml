<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#153016</item>
        <item name="colorPrimaryDark">#153016</item>
        <item name="colorAccent">#153016</item>
        <item name="android:fontFamily">sans-serif-light</item>


    </style>

    <!-- Style for Main screen -->

    <style name="MainStyle">
        <item name= "android:layout_width">match_parent</item>
        <item name= "android:layout_height">wrap_content</item>
        <item name= "android:background"> ?android:attr/selectableItemBackground</item>
        <item name= "android:gravity">center_vertical</item>
        <item name= "android:padding">@dimen/padding_vitralls_main</item>
        <item name= "android:textColor">@android:color/white</item>
        <item name= "android:textSize">@dimen/textSize_vitralls_main</item>

    </style>
</resources>
