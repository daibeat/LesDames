<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicstructureapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#004D40"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="Les Dames de Cerdanyola"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/listado_sonidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00695C"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="Llistat de sons"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/proyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00796B"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="DescripciÃ³ del projecte"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/bruforrellad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00897B"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="Artistes: Bru/Forrellad"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/vidrieras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009688"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:text="Sobre els vitralls"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/detalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/detalle"
            android:adjustViewBounds="true" />
    </LinearLayout>
</ScrollView>
